<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- ATTACH styles which are not referenced will fallback to these Android styles. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Reference to ATTACH styles overrides default styles for ATTACH. -->
        <item name="attach">@style/attachStyles</item>
    </style>

</resources>
